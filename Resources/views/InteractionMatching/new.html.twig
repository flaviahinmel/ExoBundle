{% extends "UJMExoBundle:Partial:question/headNewQuestion.html.twig" %}

{% block section_content %}
    {{ parent() }}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'matching creation' | trans }}</h3>
        </div>

        <form onsubmit="return check_form('{{ 'nb_proposal' | trans }}', '{{ 'nb_label' | trans }}');"
              action="{{ path('ujm_interactionmatching_create') }}" method="post" {{ form_enctype(form) }}>

            <div class="panel-body">
                {% include "UJMExoBundle:Partial:question.html.twig" %}
                {% include "UJMExoBundle:Partial:interactions/matching.html.twig" %}
                {% include "UJMExoBundle:Partial:interactions/endCreate.html.twig" %}
                {% include "UJMExoBundle:Partial:restform.html.twig" %}
            </div>
            <div class="panel-footer">
                <input type="hidden" name="exercise" value="{{ exoID }}" />
                <button type="submit" id="button_submit" class="btn btn-primary" >{{ 'create' | trans }}</button>
            </div>
        </form>
    </div>

    <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/jquery-ui-1.9.2/jquery-ui-1.9.2.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/ext/jquery-ui-touch-punch.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/instructions.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/interactionMatching.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/category_pop.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/hint.js') }}"></script>

    {# functions javascript #}
    {% if error is defined %}
        <script type="text/javascript">
            creationMatchingEdit('{{ 'addLabel' | trans }}', '{{ 'addProposal' | trans }}', '{{ 'delete' | trans }}', '{{ 'Label.value' | trans }}', '{{ 'Label.scoreRight' | trans }}', '{{ 'Proposal.value' | trans }}', '{{ 'numberProposal'| trans }}', '{{ 'correspondence' | trans }}', '{{ 'deleteLabel' | trans }}', '{{ 'deleteProposal' | trans }}',  '{{ typeMatching | raw }}', '{{ 'advanced edition' | trans }}', '{{ 'correspondence empty' | trans }}', 0, '{}', '{}', '{}', '{{ 'correspondenceError' | trans }}', '{{ 'scoreError'| trans}}');
            newHintEdit('{{ 'hint' | trans }}', '{{ 'penalty' | trans }}', '{{ 'add hint' | trans }}', '{{ 'delete' | trans }}');
        </script>
    {% else %}
        <script type="text/javascript">
            creationMatching('{{ 'addLabel' | trans }}', '{{ 'addProposal' | trans }}', '{{ 'delete' | trans }}', '{{ 'Label.value' | trans }}', '{{ 'Label.scoreRight' | trans }}', '{{ 'Proposal.value' | trans }}', '{{ 'numberProposal'| trans }}', '{{ 'correspondence' | trans }}', '{{ 'deleteLabel' | trans }}', '{{ 'deleteProposal' | trans }}', '{{ typeMatching|raw }}', '{{ 'advanced edition' | trans }}', '{{ 'correspondence empty' | trans }}', '{{ 'correspondenceError' | trans }}', '{{ 'scoreError'| trans}}');
            newHint('{{ 'hint' | trans }}', '{{ 'penalty' | trans }}', '{{ 'add hint' | trans }}', '{{ 'delete' | trans }}');
        </script>
    {% endif %}
{% endblock %}